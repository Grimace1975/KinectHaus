<grammar version="1.0" xml:lang="en-US" root="rootRule" tag-format="semantics/1.0-literals" xmlns="http://www.w3.org/2001/06/grammar">
  <rule id="rootRule">
    <one-of>
      <item>
        <tag>CANCEL</tag>
        <one-of>
          <item> cancel </item>
        </one-of>
      </item>
      <item>
        <tag>EXIT</tag>
        <one-of>
          <item> exit </item>
        </one-of>
      </item>
      <item>
        <tag>SERIES</tag>
        <one-of>
          <item> series </item>
          <item> show </item>
          <item> shows </item>
        </one-of>
      </item>
      <item>
        <tag>MOVIES</tag>
        <one-of>
          <item> movie </item>
          <item> movies </item>
        </one-of>
      </item>
      <item>
        <tag>PLAY</tag>
        <one-of>
          <item> play </item>
        </one-of>
      </item>
      <item>
        <tag>PAUSE</tag>
        <one-of>
          <item> pause </item>
        </one-of>
      </item>
    </one-of>
  </rule>
</grammar>